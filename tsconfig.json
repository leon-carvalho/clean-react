{
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "noEmit": true,
    "target": "es6",
    "allowJs": true,
    "rootDir": "src",
    "baseUrl": "src",
    "paths": { "@/*": ["*"] },
    "skipLibCheck": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "lib": ["dom", "dom.iterable", "esnext"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
